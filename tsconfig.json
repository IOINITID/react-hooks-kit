{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["ES2015", "DOM"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/tests"]
}
